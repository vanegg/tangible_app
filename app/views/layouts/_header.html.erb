<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("logo.png", id: "logo"), root_path %> 
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Pagina Principal", root_path %></li>
        <li><%= link_to "Acerca de Nosotros", about_path %></li>
        <% if logged_in? %>
          <% if current_user.admin %>
             <li><%= link_to "Users", users_path %></li>
             <li><%= link_to "Pedidos", admin_orders_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" id="main-profile" class="dropdown-toggle profile-toggle" data-toggle="dropdown">
             <i class="glyphicon glyphicon-user"></i> Mi Cuenta <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Perfil", current_user %></li>
              <li><%= link_to "Ajustes", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path, id: "main-login" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>