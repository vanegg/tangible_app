<script type="text/javascript">
  $(document).ready(function(){
    $('.select-layout li').on('click', function(){
      album = 1;
      layout = $(this).index() + 1;
      page_id = $(this).parent().parent().attr('id');
      $(this).parent().replaceWith('<div>HIII</div>');
      console.log("id: " + page_id + ", layout: " + layout)
      $('#' + $( this ).attr('id')).attr('href','/newpage?album=' + album + '&page=' + page_id + "&layout=" + layout);
    });
  });
</script>

<ul class='select-layout'>
  <li><%= link_to 'Layout1', '', remote: true, id: "layout1" %></li>
  <li><%= link_to 'Layout2', '', remote: true, id: "layout2" %></li>
  <li><%= link_to 'Layout3', '', remote: true, id: "layout3" %></li>
</ul>

