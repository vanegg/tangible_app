<% provide(:title, @user.name) %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-3">
        <%= render 'navbar_user'%>
        </div>
        <% if session[:access_token] %>
          <%= render 'photos/insta_select'%>
        <% end %>
        <div class="col-md-9">
          <div class="row">
            <h1 class='title-page'>Mis fotos</h1>
            <div class="col-md-6">
              <h5>Añadir fotos de tu dispositivo:</h5>
              <%= render 'photos/new' %>
            </div>
            <div class=" col-md-6 instagram">
              <h5>Añadir fotos de Instagram:</h5>
                  <% if session[:access_token] %>
                    <a href="" class="btn btn-default" id="insta_link"><strong><i class="fa fa-instagram fa-lg" ></i> <%= @client.user.username %></strong></a>
                  <% else %>
                    <a href=<%=instagram_path%> class="btn btn-default"><strong><i class="fa fa-instagram fa-lg" ></i></strong> Ingresar a tu Instagram</a>
                  <% end %>
            </div> <!-- "col-md-4 instagram" -->
            </div>
            <div class="row index_photos">
              <div class="col-md-12">
                <% if !@user.photos.empty? %>
                  <div class="col-md-8 col-md-offset-2">            
                    <%= render 'photos/display' %>    
                  </div>
                <% end %>
              </div> <!-- col-md-12 -->
            </div> <!-- row -->
          <!-- </div>  row ????????? --> 
        </div> <!-- col 9 -->
      </div> <!-- row  -->
    </div> <!-- col 12 -->
  </div> <!-- row -->
</div>  <!-- container -->