<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <%= render 'photos/new' %>

  <% if !@user.photos.empty? %>
    <%= render 'photos/index' %>    
  <% end %>

</div>