<% provide(:title, @album.title) %>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="row">        
        <div class="col-md-2">
           <!-- <aside> -->
            <section class="user_info">
                <%= gravatar_for(current_user, options = { size: 100 }) %>
                <br><br><br><br><br>
                  <h4 class='current_name'>
                   <%= link_to current_user.name, user_path(current_user)%>
                  </h4>
            </section>

                <h6>
                  <%= link_to 'Regresar a Mis álbumes', user_albums_path(current_user,@album)%>
                </h6>
       <!--    </aside> -->
          <h4>Mis Fotos</h4>
          <div class="pre-scrollable">
            <%= render 'photos/index' %> 
          </div>
        </div>
        <div class="album- carousel col-md-9">
          <div class="row" id="album-title">          
            <%= form_for [current_user, @album], class: 'title_form' do |f| %>
            <%= f.text_field :title, placeholder: "Título del álbum...", value: @album.title,  class: "form-control", id:'title_field'%>
            <% end %>          
          </div>
          <%= render 'albums/album_carousel' %>
        </div> <!--- album- carousel col-md-9 -->
      </div> <!--- row -->
    </div> <!--- col-md-12 -->
  </div> <!--- row -->
</div> <!--- conatiner-fluid -->