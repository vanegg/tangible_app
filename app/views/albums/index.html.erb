<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-3">
          <%= render 'users/navbar_user'%>
        </div>
        <div class="col-md-9">
          <h1 class='title-page'>Mis álbumes</h1>
          <table class="table">
            <thead>
              <tr>
                <th>#ID</th>
                <th>Album</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <% if current_user.albums.length <= 0 %>
              </table>
              <h5>¡Ups! Aún no tienes álbumes creados</h5>  
            <% else %>
              <tbody>
                <% current_user.albums.each do |album| %>
                  <tr>
                    <td><%=album.id%></td>
                    <td><%=album.title%></td>
                    <td>
                      <%= link_to ' Seguir_editando', user_album_path(current_user, album,), class: "glyphicon glyphicon-edit" %>
                    </td>
                    <td>
                      <%= link_to ' Borrar', user_album_path(current_user, album), method: "delete", class: "glyphicon glyphicon-remove" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
              </table>
            <% end %> 
          <%=link_to "Crear album", user_albums_path(current_user), method: "post" %>
        </div> <!-- col-md-9 -->
      </div> <!-- row -->
    </div> <!-- col-md-12 -->
  </div><!-- row -->
</div><!-- container -->